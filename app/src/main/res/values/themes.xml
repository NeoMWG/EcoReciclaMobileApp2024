<resources>
    <style name="Theme.EcoReciclaAppMobile2024" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/chathamsBlue</item>
        <item name="colorPrimaryVariant">@color/indigoBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/casablanca</item>
        <item name="colorControlActivated">@color/casablanca</item>
        <item name="colorControlNormal">@color/casablanca</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/amber</item>
        <item name="colorSecondaryVariant">@color/copper</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Estilos de componentes -->
        <item name="materialButtonStyle">@style/ModernButton</item>
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
        <item name="materialCardViewStyle">@style/AppCardStyle</item>
        <item name="textInputStyle">@style/AppTextInputLayoutStyle</item>

        <!-- Tipografía -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>

        <!-- Otros ajustes -->
        <item name="android:statusBarColor">@color/indigoBlue</item>

        <!-- Tipografía actualizada -->
        <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Title</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>
</resources>