<resources>
    <!-- Estilos personalizados botones-->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/chathamsBlue</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Actualizar estilo del Toolbar para aplicar el nuevo estilo de menÃº -->
    <style name="AppToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/chathamsBlue</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- Estilos de texto -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Actualizar estilos existentes -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/chathamsBlue</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Estilo para TextInputLayout -->
    <style name="AppTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/casablanca</item>
        <item name="hintTextColor">@color/card_background_light</item>
        <item name="android:textColorHint">@color/card_background_light</item>
        <item name="boxBackgroundColor">#99000000</item>
        <item name="passwordToggleTint">@color/card_background_light</item>
        <item name="endIconTint">@color/card_background_light</item>
    </style>

    <!-- Estilo para Cards -->
    <style name="AppCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">32dp</item>
        <item name="cardBackgroundColor">#80333333</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <!-- Estilo para TextButton-->
    <style name="CustomTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/card_background_light</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/card_background_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>