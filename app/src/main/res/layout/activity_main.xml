<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/indigoBlue"
        tools:context=".activities.MainPageActivity">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoToLoginMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="16dp"
            android:stateListAnimator="@null"
            android:text="@string/go_to_login_page"
            android:textAllCaps="true"
            android:textColor="@color/casablanca"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="4dp"
            app:backgroundTint="@color/card_background_dark"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_go_to_login"
            app:iconGravity="end"
            app:iconPadding="8dp"
            app:iconSize="18dp"
            app:iconTint="@color/casablanca"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/amber"
            app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent"
            app:strokeColor="@color/card_background_dark"
            app:strokeWidth="4dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>